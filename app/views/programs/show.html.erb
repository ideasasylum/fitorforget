<div class="min-h-screen bg-gradient-to-br from-indigo-100 via-purple-50 to-pink-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8">
      <div class="mb-6">
        <%= link_to "← Back to Programs", programs_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
      </div>

      <h1 class="text-3xl font-extrabold text-gray-900 mb-6"><%= @program.title %></h1>

      <% if @program.description.present? %>
        <div class="prose prose-lg max-w-none mb-8">
          <p class="text-gray-700 whitespace-pre-wrap"><%= @program.description %></p>
        </div>
      <% else %>
        <p class="text-gray-400 italic mb-8">No description provided</p>
      <% end %>

      <!-- Exercises Section -->
      <div class="mt-8 pt-8 border-t border-gray-200">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Exercises</h2>
          <button type="button" id="toggle-exercise-form" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add Exercise
          </button>
        </div>

        <!-- Add Exercise Form (Initially hidden) -->
        <div id="exercise-form" class="mb-6 bg-gray-50 rounded-lg p-6 hidden">
          <%= render 'exercises/form', program: @program, exercise: Exercise.new(program: @program) %>
        </div>

        <!-- Exercises List -->
        <% if @program.exercises.any? %>
          <%= turbo_frame_tag "exercises-frame" do %>
            <%= render 'exercises/list', program: @program %>
          <% end %>
        <% else %>
          <div class="text-center py-12 bg-gray-50 rounded-lg">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No exercises yet</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by adding your first exercise.</p>
          </div>
        <% end %>
      </div>

      <div class="flex space-x-4 pt-6 mt-8 border-t border-gray-200">
        <%= link_to "Edit Program", edit_program_path(@program), class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
        <%= button_to "Delete Program", program_path(@program), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete '#{@program.title}'? This action cannot be undone." } }, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" %>
      </div>
    </div>
  </div>
</div>

<script>
  // Toggle exercise form visibility
  document.addEventListener('turbo:load', function() {
    const toggleButton = document.getElementById('toggle-exercise-form');
    const exerciseForm = document.getElementById('exercise-form');

    if (toggleButton && exerciseForm) {
      toggleButton.addEventListener('click', function() {
        exerciseForm.classList.toggle('hidden');
      });
    }
  });
</script>
