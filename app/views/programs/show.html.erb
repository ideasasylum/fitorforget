<div class="min-h-screen bg-gradient-to-br from-indigo-100 via-purple-50 to-pink-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8">
      <div class="mb-6">
        <%= link_to "â† Back to Programs", programs_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
      </div>

      <h1 class="text-3xl font-extrabold text-gray-900 mb-6"><%= @program.title %></h1>

      <% if @program.description.present? %>
        <div class="prose prose-lg max-w-none mb-8">
          <p class="text-gray-700 whitespace-pre-wrap"><%= @program.description %></p>
        </div>
      <% else %>
        <p class="text-gray-400 italic mb-8">No description provided</p>
      <% end %>

      <div class="flex space-x-4 pt-6 border-t border-gray-200">
        <%= link_to "Edit Program", edit_program_path(@program), class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
        <%= button_to "Delete Program", program_path(@program), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete '#{@program.title}'? This action cannot be undone." } }, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" %>
      </div>
    </div>
  </div>
</div>
