<%= form_with model: @program, class: "space-y-6" do |f| %>
  <% if @program.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% @program.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :title,
          required: true,
          maxlength: 200,
          placeholder: "e.g., Upper Body Strength Training",
          class: "appearance-none rounded-lg block w-full px-4 py-3 border #{@program.errors[:title].any? ? 'border-red-300' : 'border-gray-300'} placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-base" %>
    <% if @program.errors[:title].any? %>
      <p class="mt-1 text-sm text-red-600">
        <%= @program.errors.full_messages_for(:title).join(', ') %>
      </p>
    <% end %>
  </div>

  <div>
    <%= f.label :description, "Description (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :description,
          rows: 6,
          placeholder: "Describe your program...",
          class: "appearance-none rounded-lg block w-full px-4 py-3 border #{@program.errors[:description].any? ? 'border-red-300' : 'border-gray-300'} placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-base" %>
    <% if @program.errors[:description].any? %>
      <p class="mt-1 text-sm text-red-600">
        <%= @program.errors.full_messages_for(:description).join(', ') %>
      </p>
    <% end %>
  </div>

  <div>
    <%= f.submit (@program.new_record? ? "Create Program" : "Update Program"), class: "w-full flex justify-center py-3 px-4 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
  </div>
<% end %>
