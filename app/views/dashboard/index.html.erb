<div class="min-h-screen bg-gradient-to-br from-indigo-100 via-purple-50 to-pink-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-extrabold text-gray-900 mb-8">Dashboard</h1>

    <!-- Two-column layout: programs and workouts -->
    <div class="grid gap-6 lg:grid-cols-2">

      <!-- Programs Section (order-1 on desktop, order-2 on mobile) -->
      <section class="order-2 lg:order-1">
        <div class="flex justify-between items-center mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Recent Programs</h2>
          <% if @programs.any? %>
            <%= link_to "Create Program", new_program_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]" %>
          <% end %>
        </div>

        <% if @programs.empty? %>
          <!-- Empty state for programs -->
          <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <div class="max-w-md mx-auto">
              <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <h2 class="text-2xl font-bold text-gray-900 mb-2">Create Your First Program</h2>
              <p class="text-gray-600 mb-6">Get started by creating your first exercise program to organize your workouts</p>
              <%= link_to "Create Program", new_program_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]" %>
            </div>
          </div>
        <% else %>
          <!-- Program cards -->
          <div class="space-y-4">
            <% @programs.each do |program| %>
              <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
                <h3 class="text-xl font-bold text-gray-900 mb-2"><%= program.title %></h3>
                <% if program.description.present? %>
                  <p class="text-gray-700 mb-4 line-clamp-2"><%= truncate(program.description, length: 120) %></p>
                <% else %>
                  <p class="text-gray-400 italic mb-4">No description</p>
                <% end %>

                <!-- Primary action: Start Workout -->
                <div class="mb-3">
                  <%= link_to "Start Workout", new_workout_path(program_id: program.uuid), class: "inline-flex items-center justify-center w-full px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]" %>
                </div>

                <!-- Secondary actions: View, Edit, Delete -->
                <div class="flex gap-2">
                  <%= link_to "View", program_path(program), class: "flex-1 inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]" %>
                  <% if logged_in? && current_user.id == program.user_id %>
                    <%= link_to "Edit", edit_program_path(program), class: "flex-1 inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]" %>
                    <%= button_to "Delete", program_path(program), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete '#{program.title}'? This action cannot be undone." } }, class: "flex-1 inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors min-h-[44px]" %>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- View All Programs link -->
            <% if @has_more_programs %>
              <div class="text-center pt-2">
                <%= link_to "View All Programs", programs_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </section>

      <!-- Workouts Section (order-1 on mobile, order-2 on desktop) -->
      <% if @workouts.any? %>
        <section class="order-1 lg:order-2">
          <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Recent Workouts</h2>
          </div>

          <!-- Workout cards -->
          <div class="space-y-4">
            <% @workouts.each do |workout| %>
              <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow bg-white">
                <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= workout.program_title %></h3>

                <% stats = workout.completion_stats %>
                <p class="text-gray-600 mb-3">
                  <%= stats[:completed_count] %> of <%= stats[:total_count] %> exercises complete
                </p>

                <div class="flex items-center justify-between">
                  <!-- Completion badge -->
                  <% if workout.complete? %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                      Completed
                    </span>
                  <% elsif workout.in_progress? %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                      In Progress
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                      Not Started
                    </span>
                  <% end %>

                  <!-- View button -->
                  <%= link_to "View", workout_path(workout), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 transition-colors min-h-[44px]" %>
                </div>

                <!-- Workout date -->
                <p class="text-sm text-gray-500 mt-3">
                  Created <%= time_ago_in_words(workout.created_at) %> ago
                </p>
              </div>
            <% end %>

            <!-- View All Workouts link -->
            <% if @has_more_workouts %>
              <div class="text-center pt-2">
                <%= link_to "View All Workouts", workouts_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
              </div>
            <% end %>
          </div>
        </section>
      <% end %>

    </div>
  </div>
</div>
