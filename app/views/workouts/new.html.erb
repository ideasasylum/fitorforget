<div class="min-h-screen bg-gradient-to-br from-indigo-100 via-purple-50 to-pink-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8">
      <h1 class="text-3xl font-extrabold text-gray-900 mb-6">Preview Workout</h1>
      
      <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= @workout.program_title %></h2>
      
      <p class="text-gray-600 mb-8">
        <%= @workout.exercises_data.length %> exercises in this workout
      </p>

      <div class="space-y-4 mb-8">
        <% @workout.exercises_data.each_with_index do |exercise, index| %>
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex items-center">
              <span class="flex-shrink-0 w-8 h-8 rounded-full bg-indigo-100 text-indigo-600 flex items-center justify-center font-semibold mr-3">
                <%= index + 1 %>
              </span>
              <div>
                <h3 class="font-medium text-gray-900"><%= exercise["name"] %></h3>
                <% if exercise["repeat_total"] > 1 %>
                  <p class="text-sm text-gray-500">Set <%= exercise["repeat_instance"] %> of <%= exercise["repeat_total"] %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="flex flex-col sm:flex-row gap-4">
        <%= button_to "Begin Workout", workouts_path, method: :post, params: { program_id: @workout.program.uuid }, class: "flex-1 inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]" %>
        <%= link_to "Cancel", program_path(@workout.program), class: "flex-1 inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors min-h-[44px]" %>
      </div>
    </div>
  </div>
</div>
