<%= turbo_frame_tag "exercise-#{exercise.id}" do %>
  <div id="exercise-<%= exercise.id %>" class="bg-gray-50 rounded-lg p-4 mb-3" data-controller="drag" data-exercise-id="<%= exercise.id %>">
  <div class="flex items-start gap-3">
    <!-- Drag handle (desktop only) -->
    <% if @is_owner %>
      <div class="hidden md:block flex-shrink-0 cursor-move drag-handle text-gray-400 hover:text-gray-600 mt-1" draggable="true">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"></path>
        </svg>
      </div>
    <% end %>

    <div class="flex-grow">
      <div class="flex items-start justify-between">
        <div class="flex-grow">
          <h3 class="font-semibold text-gray-900 text-lg"><%= exercise.name %></h3>
          <p class="text-sm text-gray-600 mt-1">
            <%= pluralize(exercise.repeat_count, 'rep') %>
          </p>

          <% if exercise.video_url.present? %>
            <div class="mt-2">
              <% if (embed = video_embed_html(exercise.video_url)) %>
                <%= embed %>
              <% else %>
                <%= link_to exercise.video_url, target: "_blank", class: "text-sm text-indigo-600 hover:text-indigo-700 inline-flex items-center" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Watch video
                <% end %>
              <% end %>
            </div>
          <% end %>

          <% if exercise.description.present? %>
            <div class="prose prose-sm max-w-none mt-3">
              <%= markdown(exercise.description) %>
            </div>
          <% end %>
        </div>

        <div class="flex items-center gap-2 ml-4">
          <!-- Mobile reorder buttons -->
          <% if @is_owner %>
            <div class="flex md:hidden flex-col gap-1">
              <button type="button" data-action="click->drag#moveUp" class="p-2 text-gray-400 hover:text-gray-600 min-w-[44px] min-h-[44px] flex items-center justify-center">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
                </svg>
              </button>
              <button type="button" data-action="click->drag#moveDown" class="p-2 text-gray-400 hover:text-gray-600 min-w-[44px] min-h-[44px] flex items-center justify-center">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
            </div>
          <% end %>

          <!-- Edit button -->
          <% if @is_owner %>
            <%= link_to edit_exercise_path(exercise), data: { turbo_frame: "exercise-#{exercise.id}" }, class: "p-2 text-indigo-600 hover:text-indigo-700 min-w-[44px] min-h-[44px] flex items-center justify-center" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>
          <% end %>

          <!-- Delete button -->
          <% if @is_owner %>
            <%= button_to exercise_path(exercise), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this exercise?" } }, class: "p-2 text-red-600 hover:text-red-700 min-w-[44px] min-h-[44px] flex items-center justify-center" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>
<% end %>
